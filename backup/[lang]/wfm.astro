---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import DynamicSection from "../../components/DynamicSection.astro";
import { getEntry } from "astro:content";

// Get language from URL parameter using the same pattern as the main site
export async function getStaticPaths() {
    return [
        { params: { lang: "en" } },
        { params: { lang: "de" } },
        { params: { lang: "it" } },
    ];
}

const { lang } = Astro.params;
const language = lang || "en";

// Load page configuration from WFM-specific language file
let pageSections: any[] = [];
try {
    const langData = await getEntry("languages", `wfm-${language}`);
    pageSections = langData?.data?.page_sections || [];
    // Sort sections by order
    pageSections.sort((a: any, b: any) => (a.order || 0) - (b.order || 0));
} catch (error) {
    console.warn(
        "Could not load WFM page sections for language:",
        language,
        error,
    );
    // Fallback to English if the requested language doesn't exist
    try {
        const fallbackData = await getEntry("languages", "wfm-en");
        pageSections = fallbackData?.data?.page_sections || [];
        pageSections.sort((a: any, b: any) => (a.order || 0) - (b.order || 0));
    } catch (fallbackError) {
        console.error(
            "Could not load fallback WFM page sections:",
            fallbackError,
        );
    }
}

// Dynamic titles and descriptions based on language
const titles = {
    en: "Workforce Manager - AI-Powered Workforce Planning | EvolverAI",
    de: "Workforce Manager - KI-gestützte Personalplanung | EvolverAI",
    it: "Workforce Manager - Pianificazione della Forza Lavoro AI | EvolverAI",
};

const descriptions = {
    en: "Advanced AI-Powered Workforce Planning & Scheduling Solution. Streamline and optimize all aspects of workforce management with intelligent automation.",
    de: "Fortschrittliche KI-gestützte Personalplanung und Terminplanung. Optimieren Sie alle Aspekte des Personalmanagements mit intelligenter Automatisierung.",
    it: "Soluzione avanzata di pianificazione e programmazione della forza lavoro basata sull'IA. Ottimizza tutti gli aspetti della gestione del personale con automazione intelligente.",
};
---

<Layout title={titles[language]} description={descriptions[language]}>
    <Header currentLanguage={language} />

    <main class="space-y-16">
        <!-- Dynamically render sections from WFM YAML configuration -->
        {
            pageSections.map((sectionConfig) => (
                <DynamicSection
                    sectionConfig={sectionConfig}
                    language={language}
                    languageFile={`wfm-${language}`}
                />
            ))
        }
    </main>

    <Footer language={language} />
</Layout>
