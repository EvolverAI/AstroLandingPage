---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import DynamicSection from "../../components/DynamicSection.astro";
import { getEntry } from "astro:content";

// Get language from URL parameter using the same pattern as the main site
export async function getStaticPaths() {
    return [
        { params: { lang: "en" } },
        { params: { lang: "de" } },
        { params: { lang: "it" } },
    ];
}

const { lang } = Astro.params;
const language = lang || "en";

// Load page configuration from Courses-specific language file
let pageSections: any[] = [];
try {
    const langData = await getEntry("languages", `courses-${language}`);
    pageSections = langData?.data?.page_sections || [];
    // Sort sections by order
    pageSections.sort((a: any, b: any) => (a.order || 0) - (b.order || 0));
} catch (error) {
    console.warn(
        "Could not load Courses page sections for language:",
        language,
        error,
    );
    // Fallback to English if the requested language doesn't exist
    try {
        const fallbackData = await getEntry("languages", "courses-en");
        pageSections = fallbackData?.data?.page_sections || [];
        pageSections.sort((a: any, b: any) => (a.order || 0) - (b.order || 0));
    } catch (fallbackError) {
        console.error(
            "Could not load fallback Courses page sections:",
            fallbackError,
        );
    }
}

// Dynamic titles and descriptions based on language
const titles = {
    en: "AI Courses & Training - Professional Development | EvolverAI",
    de: "KI-Kurse & Schulungen - Berufliche Weiterentwicklung | EvolverAI",
    it: "Corsi AI & Formazione - Sviluppo Professionale | EvolverAI",
};

const descriptions = {
    en: "Professional AI training courses and workshops. Learn cutting-edge artificial intelligence technologies with expert-led training programs.",
    de: "Professionelle KI-Schulungskurse und Workshops. Lernen Sie modernste Technologien der künstlichen Intelligenz mit expertengeführten Trainingsprogrammen.",
    it: "Corsi di formazione professionale sull'IA e workshop. Impara le tecnologie di intelligenza artificiale all'avanguardia con programmi di formazione guidati da esperti.",
};
---

<Layout title={titles[language]} description={descriptions[language]}>
    <Header currentLanguage={language} />

    <main class="space-y-0">
        <!-- Dynamically render sections from Courses YAML configuration -->
        {
            pageSections.map((sectionConfig) => (
                <DynamicSection
                    sectionConfig={sectionConfig}
                    language={language}
                    languageFile={`courses-${language}`}
                />
            ))
        }
    </main>

    <Footer language={language} />
</Layout>
