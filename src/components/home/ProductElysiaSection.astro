---
// Product Elysia Section using the reusable ProductSection component with proper localization
import ProductSection from "../global/ProductSection.astro";

export interface Props {
  language?: string;
}

const { language = "en" } = Astro.props;

const sectionProps = {
  sectionId: "product_elysia",
  sectionType: "product_elysia",
  title: "Elysia AI Assistant", // Will be overridden by localization
  subtitle: "Intelligent AI Assistant", // Will be overridden by localization
  description:
    "Meet Elysia, your intelligent AI assistant designed to enhance customer interactions and streamline business operations.", // Will be overridden by localization
  buttonText: "Discover Elysia", // Will be overridden by localization
  buttonUrl: "/elysia",
  buttonColor: "bg-purple-600 hover:bg-purple-700",
  useIconInstead: false, // Changed to false to show the image instead of icon
  iconName: "smart_toy",
  iconGradient: "from-purple-600 to-blue-600",
  image: "/img/evolverai-web-elysia-bg.jpg",
  imageAlt: "Elysia AI Assistant",
  imageClasses: "max-w-md mx-auto",
  imagePosition: "left", // Image left, text right
  language: language,
};
---

<ProductSection {...sectionProps} />
