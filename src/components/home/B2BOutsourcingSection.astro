---
// B2B Outsourcing Section component
import { getEntry } from "astro:content";

export interface Props {
  language?: string;
  environment?: string;
}

const { language = "en", environment = "production" } = Astro.props;

// Get localized content
let localizedSections: any = {};
try {
  const langData = await getEntry("languages", language);
  localizedSections = langData?.data?.sections || {};
} catch (error) {
  console.warn("Content Collections not available:", error);
}

const b2bContent = localizedSections.b2b || {};
---

<section id="b2b_outsourcing" class="relative bg-custom-slate py-12">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-noto-sans mb-8 text-center text-white">
      {b2bContent.title || "B2B Outsourcing Services"}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="bg-slate-800 p-6 rounded-lg">
        <h3 class="text-xl font-semibold text-blue-400 mb-4">
          {b2bContent.professionalServices?.title || "Professional Services"}
        </h3>
        <p class="text-gray-300 mb-4">
          {
            b2bContent.professionalServices?.description ||
              "Comprehensive outsourcing solutions that let you focus on your core business while we handle specialized processes."
          }
        </p>
        <ul class="space-y-2 text-gray-300">
          {
            b2bContent.professionalServices?.features ? (
              b2bContent.professionalServices.features.map(
                (feature: string) => <li>• {feature}</li>,
              )
            ) : (
              <>
                <li>• IT Infrastructure Management</li>
                <li>• Data Processing & Analytics</li>
                <li>• Customer Support Services</li>
                <li>• Business Process Automation</li>
              </>
            )
          }
        </ul>
      </div>
      <div class="bg-slate-800 p-6 rounded-lg">
        <h3 class="text-xl font-semibold text-blue-400 mb-4">
          {b2bContent.aiIntegration?.title || "AI Integration"}
        </h3>
        <p class="text-gray-300 mb-4">
          {
            b2bContent.aiIntegration?.description ||
              "Seamless integration of AI technologies into your existing business operations for enhanced efficiency."
          }
        </p>
        <a
          href="/b2b"
          class="inline-block bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition duration-300"
        >
          {b2bContent.aiIntegration?.linkText || "Learn More"}
        </a>
      </div>
    </div>
  </div>
</section>
