---
// AI Courses Section using the reusable CardsSection component
import CardsSection from "../global/CardsSection.astro";

export interface Props {
  language?: string;
  environment?: string;
}

const { language = "en", environment = "production" } = Astro.props;

const coursesData = [
  {
    title: "Professional Training",
    description:
      "Comprehensive AI training programs for professionals and teams.",
    icon: "school",
    linkText: "Learn More",
    linkUrl: "/courses",
  },
  {
    title: "Corporate Workshops",
    description:
      "Customized training solutions for your organization's specific needs.",
    icon: "corporate_fare",
    linkText: "Learn More",
    linkUrl: "/courses",
  },
  {
    title: "Multi-Language Support",
    description: "Training available in multiple languages for global reach.",
    icon: "language",
    linkText: "Learn More",
    linkUrl: "/courses",
  },
];

const sectionProps = {
  sectionId: "ai_courses",
  sectionType: "ai_courses",
  title: "AI Training & Courses",
  cards: coursesData,
  columns: "3",
  theme: "dark",
  cardTheme: "dark",
  iconColor: "text-yellow-400",
  language,
  environment,
};
---

<CardsSection {...sectionProps} />
