---
// Header component with language support
import LanguageSwitcher from "./LanguageSwitcher.astro";

export interface Props {
  currentLanguage?: string;
}

const { currentLanguage = "en" } = Astro.props;
---

<header
  class="bg-gradient-to-r from-slate-900 to-slate-950 text-white py-4 mb-8 sticky top-0 z-50"
>
  <div class="container mx-auto px-4 flex justify-between items-center">
    <h1 class="text-2xl font-bold">
      Evolver<span class="text-blue-800">AI</span>
    </h1>

    <!-- Mobile Menu Button -->
    <button id="mobile-menu-button" class="md:hidden focus:outline-none">
      <i class="material-icons md-24">menu</i>
    </button>

    <!-- Desktop Navigation -->
    <nav id="menu" class="hidden md:flex items-center gap-6">
      <a
        href={`/${currentLanguage}#about`}
        class="text-white px-3 py-2 hover:underline flex items-center whitespace-nowrap"
      >
        <i class="material-icons text-base leading-none mr-2">business</i
        >Company
      </a>
      <a
        href={`/${currentLanguage}/b2b`}
        class="text-white px-3 py-2 hover:underline flex items-center whitespace-nowrap"
      >
        <i class="material-icons text-base leading-none mr-2">handshake</i>B2B
      </a>
      <a
        href={`/${currentLanguage}#products`}
        class="text-white px-3 py-2 hover:underline flex items-center whitespace-nowrap"
      >
        <i class="material-icons text-base leading-none mr-2">settings</i
        >Products
      </a>
      <a
        href={`/${currentLanguage}/academy`}
        class="text-white px-3 py-2 hover:underline flex items-center whitespace-nowrap"
      >
        <i class="material-icons text-base leading-none mr-2">school</i>Academy
      </a>
      <a
        href={`/${currentLanguage}#contact`}
        class="text-white px-3 py-2 hover:underline flex items-center whitespace-nowrap"
      >
        <i class="material-icons text-base leading-none mr-2">headset_mic</i
        >Contact
      </a>

      <!-- Language Switcher -->
      <LanguageSwitcher currentLanguage={currentLanguage} />
    </nav>
  </div>
</header>
